    body

        nav(class="navbar navbar-default navbar-fixed-top" role="navigation-demo" id="profilepic-navbar")
          div(class="container")
            <!-- Brand and toggle get grouped for better mobile display -->
            div(class="navbar-header")
              button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
              a(class="navbar-brand") BIT STRIPS
        
            <!-- Collect the nav links, forms, and other content for toggling -->
            div(class="collapse navbar-collapse" id="navigation-example-2")
              ul(class="nav navbar-nav navbar-right")
                li
                    a(class="btn btn-simple", href="/createpage") Create

                li
                    a(class="btn btn-simple", href="/viewpage") View
                
                li
                    a(class="btn btn-simple", href="/profilepage") Profile

                li
                    a(class="btn btn-simple", href="/logout") Logout




        div(class="wrapper")
            div(class="createpage-background")
                div(class="row")
                    div(class="col-md-6 col-md-offset-1 col-sm-9 col-sm-offset-1 col-xs-8 col-xs-offset-1")
                            form(action = '/viewpage', method = 'post')
                                input(type='text',name = 'search', placeholder="search", class="btn-block")   
                                select(name = 'order') Sort By
                                    option(value='relevance') Relevance
                                    option(value='date') Date Updated
                                    option(value='likes') Likes
                                input(type="radio", name="sort", value="desc", checked =true)  
                                label(for="desc") Descending       
                                input(type="radio", name="sort", value="asc", checked =false) 
                                label(for="desc") Ascending  
                                input(class="btn btn-default" type='submit', value='search')

                                
                div(class="row")
                    div(class="col-md-6 col-md-offset-1 col-sm-9 col-sm-offset-1 col-xs-11 col-xs-offset-1")
                        p Searching: #{search[0]}, #{search[1]}, #{search[2]}

                            
                div(class="row")
                    div(class="col-md-6 col-md-offset-1 col-sm-9 col-sm-offset-1 col-xs-8 col-xs-offset-1")
