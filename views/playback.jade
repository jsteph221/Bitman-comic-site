doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        title= title

        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport')
        meta(name="viewport" content="width=device-width")

        script(src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js")
        link(rel='stylesheet', href="../bootstrap3/css/bootstrap.css")
        link(rel='stylesheet', href="/stylesheets/ct-paper.css")
        link(rel='stylesheet', href='/stylesheets/style.css')

        script(src="/javascripts/readURL.js")
        script(src="/javascripts/submitPlayback.js")
        script(src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js")
        script(src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js")
        
        <!--     Fonts and icons     -->
        link(href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
        link(href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css')

    body

        nav(class="navbar navbar-default navbar-fixed-top" role="navigation-demo" id="profilepic-navbar")
          div(class="container")
            <!-- Brand and toggle get grouped for better mobile display -->
            div(class="navbar-header")
              button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
              a(class="navbar-brand") BIT STRIPS
              br
              br
        
            <!-- Collect the nav links, forms, and other content for toggling -->
            div(class="collapse navbar-collapse" id="navigation-example-2")
              ul(class="nav navbar-nav navbar-right")
                li
                    a(class="btn btn-simple", href="/createpage") Create

                li
                    a(class="btn btn-simple", href="/viewpage") View
                
                li
                    a(class="btn btn-simple", href="/profilepage") Profile

                li
                    a(class="btn btn-simple", href="/logout") Logout



        div(class="wrapper")
            div(class="createpage-background")

                form#fileUpload(name="formPlayback" method="post" action="/playback" enctype="multipart/form-data")

                    div(class="container")

                        div(class="row")
                            div(class="col-md-12 text-center")
                                p
                                h3 #{csTitle}
                                if edited == 2
                                    u1(class = "errors")
                                        l1 Comic Succesfully Edited
                                if edited == 3
                                    u1(class = "errors")
                                        l1 Comic unable to be edited due to author preference
                                
                        div(class="row")
                            br
                            div(class="col-md-3 col-md-offset-0 col-sm-4 col-sm-offset-2 col-xs-6 col-xs-offset-3 text-center")
                                div(class="row text-center")
                                        img(class="comic_img1", id="cell1", src="/1.jpg")
                                div(class="row text-center")
                                    div(class="pb_text")
                                        p #{csDialog1}
                                br                               
                                

                             div(class="col-md-3 col-md-offset-0 col-sm-4 col-sm-offset-2 col-xs-6 col-xs-offset-3 text-center")
                                div(class="row text-center")
                                        img(class="comic_img2", id="cell2", src="/2.jpg")
                                div(class="row text-center")
                                    div(class="pb_text")
                                        p #{csDialog2}
                                br
                                

                            div(class="col-md-3 col-md-offset-0 col-sm-4 col-sm-offset-2 col-xs-6 col-xs-offset-3 text-center")
                                div(class="row text-center")
                                        img(class="comic_img3", id="cell3", src="/3.jpg")
                                div(class="row text-center")
                                    div(class="pb_text")
                                        p #{csDialog3}
                                br
                                

                            div(class="col-md-3 col-md-offset-0 col-sm-4 col-sm-offset-2 col-xs-6 col-xs-offset-3 text-center")
                                div(class="row text-center")
                                        img(class="comic_img4", id="cell4", src="/4.jpg")
                                div(class="row text-center")
                                    div(class="pb_text")
                                        p #{csDialog4}
                                br
                                

                        div(class="row")
                            div(class="col-md-8")
                                h6 Created by:
                                    a(href="/profilepage/?username=#{csAuthor}") #{csAuthor}
                                h6 Contributors:
                                    if contributors
                                        for cont in contributors
                                            a(href="/profilepage/?username=#{cont}") #{cont} ,
                                p #{csDescription}
                                
                                h9 Tags: #{csTags}

                            div(class="col-md-4 text-right")
                                
                                div(class="col-md-6 col-md-offset-6 text-center")
                                    a(href="/editpage/?comicid=#{csId}&comictitle=#{csTitle}") Edit
                                    div(class="progressnew")

                                        div(class="progress-bar-success" role="progressbar" aria-valuenow="#{csRating}" aria-valuemin="0" aria-valuemax="100" style="width:#{csRating}%") #{csRating}%
                                    
                                //h6 Likes: #{csLikes}
                                //h6 Dislikes: #{csDislikes}
                                button(id="upload", class="btn btn-fill btn-success") Like (#{csLikes})
                                button(onclick="return SubmitDislike(this);" class="btn btn-fill btn-danger") Dislike (#{csDislikes})


                                if liked
                                    u1(class="pb_errors")
                                        p You have already rated this comic!


                        div(class="row")
                            div(class="col-md-12 text-center")
                                br
                                br
                                textarea(id="commentstext", rows="3", cols="30", name="comment", placeholder="Add a comment...")
                                br
                                button(onclick="return SubmitComment(this)", class="btn btn-fill btn-primary") Post Comment
                            div(class="col-md-12")
                                h6 Comments
                                ul
                                    each csComment, i in csComments
                                        ul 
                                            hr
                                            p #{csComment}

                        div(class="row")
                            br
                            br
                            br
                            br


script(src="/javascripts/jquery-1.10.2.js" type="text/javascript")
script(src="/javascripts/jquery-ui-1.10.4.custom.min.js" type="text/javascript")

script(src="../bootstrap3/js/bootstrap.js" type="text/javascript")

<!--  Plugins -->
script(src="/javascripts/bootstrap-select.js")

script(src="/javascripts/ct-paper.js")